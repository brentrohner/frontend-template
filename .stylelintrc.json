{
  "extends": "stylelint-config-standard",
  "plugins": ["stylelint-scss"],
  "ignoreFiles": [
    "coverage/**/*",
    "dist/**/*",
    "node_modules/**/*",
    "src/**/*.(ts|tsx)"
  ],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": [true, { "ignoreAtRules": ["value"] }]
  }
}
